<section class="d-flex flex-column">
  <div class="d-flex m-auto shadow-lg p-5 flex-column">
    <h2 class="mb-3">Mude sua senha</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-floating row mb-2">
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control', placeholder: ' ' %>
        <%= f.label :password, 'Nova senha' %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres no mÃ­nimo)</em><br />
        <% end %>
      </div>

      <div class="field form-floating row mb-2">
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', placeholder: ' ' %>
        <%= f.label :password_confirmation, 'Confirme a nova senha' %><br />
      </div>

      <div class="actions row">
        <%= f.submit 'Mudar minha senha', class: 'btn btn-primary text-wrap mb-2 w-100' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</section>
