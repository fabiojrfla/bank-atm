<section class="d-flex flex-column min-vh-100">
  <div class="d-flex m-auto shadow-lg p-5 flex-column w-75">
    <h2 class="mb-3">Edite seus dados</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'client_registration_form', f: f %>

      <div class="row g-2 mb-2">
        <div class="field col-lg-6 form-floating">
          <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control', placeholder: ' ' %>
          <%= f.label :current_password %>
        </div>

        <div class="field col-lg-6 form-floating">
          <i>(precisamos de sua senha atual para confirmar suas alterações)</i>
        </div>
      </div>

      <div class="actions">
        <%= f.submit 'Atualizar', class: 'w-100 btn btn-lg btn-primary fw-bolder mt-2' %>
      </div>
    <% end %>

    <div class="links d-flex justify-content-center flex-column mt-2">
      <%= link_to 'Voltar', root_path, class:'text-primary text-decoration-none fw-bolder' %>
    </div>
  </div>
</section>
