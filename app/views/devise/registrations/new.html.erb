<section class="d-flex flex-column min-vh-100">
  <div class="d-flex m-auto shadow-lg p-5 flex-column w-75">
    <h2 class="mb-3">Abra sua conta</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row g-2 mb-2">
        <div class="field col-lg-6 form-floating">
          <%= f.text_field :registration_number, autofocus: true, autocomplete: "registration_number", class: 'form-control', placeholder: ' ' %>
          <%= f.label :registration_number %><br />
        </div>

        <div class="field col-lg-6 form-floating">
          <%= f.date_field :birth_date, autocomplete: "birth_date", class: 'form-control', placeholder: ' ' %>
          <%= f.label :birth_date %><br />
        </div>
      </div>
      <div class="row g-2 mb-2">
        <div class="field col-lg-6 form-floating">
          <%= f.text_field :name, autocomplete: "name", class: 'form-control', placeholder: ' ' %>
          <%= f.label :name %><br />
        </div>

        <div class="field col-lg-6 form-floating">
          <%= f.text_field :surname, autocomplete: "surname", class: 'form-control', placeholder: ' ' %>
          <%= f.label :surname %><br />
        </div>
      </div>
      <div class="row g-2 mb-2">
        <div class="field col-lg-12 form-floating">
          <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: ' ' %>
          <%= f.label :email %><br />
        </div>
      </div>
      <div class="row g-2 mb-2">
        <div class="field col-lg-6 form-floating">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: ' ' %>
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em>
          <% end %><br />
        </div>

        <div class="field col-lg-6 form-floating">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: ' ' %>
          <%= f.label :password_confirmation %><br />
        </div>
      </div>
      <div class="actions">
        <%= f.submit "Abrir conta", class: 'w-100 btn btn-lg btn-primary fw-bolder mt-2' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
