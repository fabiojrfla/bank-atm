<section class="d-flex flex-column">
  <div class="d-flex m-auto shadow-lg p-5 flex-column">
    <h2 class="mb-3">Acesse sua conta</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-floating mb-2">
        <%= f.text_field :registration_number, class: 'form-control', placeholder: ' ', autofocus: true, autocomplete: 'registration_number' %>
        <%= f.label :registration_number %><br />
      </div>

      <div class="field form-floating">
        <%= f.password_field :password, class: 'form-control', placeholder: ' ', autocomplete: 'current-password' %>
        <%= f.label :password %><br />
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: 'mt-3' %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit 'Acessar', class: 'w-100 btn btn-lg btn-primary fw-bolder mt-2' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</section>
